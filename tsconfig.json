{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": ["ES2022"],
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "baseUrl": "./"
    },
    "include": ["modules", "utils", "index.ts", "eslint.config.ts", "release.config.ts"],
    "exclude": ["node_modules", "dist", "coverage"]
}
